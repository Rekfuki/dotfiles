{
    "languageserver": {
        "bash": {
            "command": "bash-language-server",
            "args": ["start"],
            "filetypes": ["sh"],
            "ignoredRootPaths": ["~"]
        },
        "dockerfile": {
            "command": "docker-langserver",
            "filetypes": ["dockerfile"],
            "args": ["--stdio"]
        },
        "golang": {
            "command": "gopls",
            "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
            "filetypes": ["go"],
            "initializationOptions": {
                "completeUnimported": true
            }
        },
        "lua": {
            "command": "lua-lsp",
            "args": ["--local"],
            "filetypes": ["lua"]
        },
        "terraform": {
            "command": "terraform-lsp",
            "filetypes": ["tf"],
            "initializationOptions": {}
        }
    },
    "python.jediEnabled": false
}
