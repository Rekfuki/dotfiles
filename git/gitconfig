[user]
	name = Georgi Dimitrov
	email = georgi.dimitrov@form3.tech
[core]
	editor = vim
	mergeoptions = --no-edit
	excludesFile = ~/dotfiles/git/gitignore
	pager = less -F -X
[push]
	default = simple
[pull]
	rebase = true
[alias]
	co = checkout
	ls = ls-files --full-name -st
	tree = log --graph --date=local --pretty=format:'%Cgreen%ad%Creset %Cred%h%Creset %an: %s %Creset %C(yellow)%d%Creset' --all
	find = !git log -p -S     
	hide = update-index --assume-unchanged
	unhide = update-index --no-assume-unchanged
[color]
    branch = auto
    diff = auto
    status = auto
    ui = auto
[color "branch"]
    current = yellow
    local = blue
    remote = magenta
[color "diff"]
    meta = blue
    frag = magenta
    old = red bold
    new = green bold
[color "status"]
    added = green bold
    changed = yellow bold
    deleted = red bold
    untracked = blue bold
[http]
    postBuffer = 1024288000
[url "git@github.com:"]
	insteadOf = https://github.com/
[include]
    path = ~/dotfiles/git/extras
